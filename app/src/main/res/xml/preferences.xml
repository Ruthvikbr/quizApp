<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="Notification_preference"
        android:title="Daily Notifications"
        android:summary="Turn on to receive daily notifications"
        />
    <ListPreference
        android:defaultValue="StateName"
        android:entries="@array/sorting_methods_names"
        android:entryValues="@array/sorting_methods_values"
        android:title="Sort By"
        android:key="Sort_Preference"
        />

    <ListPreference
        android:defaultValue="4"
        android:entries="@array/number_of_options"
        android:entryValues="@array/number_of_options_values"
        android:title="Number Of Options"
        android:key="Option_preference"
        />
</PreferenceScreen>